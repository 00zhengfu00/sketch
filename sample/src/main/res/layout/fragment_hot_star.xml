<?xml version="1.0" encoding="utf-8"?>
<!-- 明星全部页面 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <me.xiaopan.android.spear.sample.widget.MyPullRefreshLayout
        android:id="@+id/refreshLayout_hotStar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_hotStar_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@null"/>
    </me.xiaopan.android.spear.sample.widget.MyPullRefreshLayout>
    <me.xiaopan.android.spear.sample.widget.HintView
        android:id="@+id/hint_hotStar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>