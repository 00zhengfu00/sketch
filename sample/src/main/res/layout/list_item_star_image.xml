<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <me.xiaopan.android.spear.SpearImageView
        android:id="@+id/image_starImageItem_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/home_category_margin_border"
        android:layout_marginTop="@dimen/home_category_margin"
        android:layout_marginRight="@dimen/home_category_margin"
        android:layout_marginBottom="@dimen/home_category_margin"/>

    <me.xiaopan.android.spear.SpearImageView
        android:id="@+id/image_starImageItem_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/home_category_margin"
        android:layout_marginTop="@dimen/home_category_margin"
        android:layout_marginRight="@dimen/home_category_margin"
        android:layout_marginBottom="@dimen/home_category_margin"/>

    <me.xiaopan.android.spear.SpearImageView
        android:id="@+id/image_starImageItem_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/home_category_margin"
        android:layout_marginTop="@dimen/home_category_margin"
        android:layout_marginRight="@dimen/home_category_margin_border"
        android:layout_marginBottom="@dimen/home_category_margin"/>
</LinearLayout>
