<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main_leftMenu"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:clickable="true"
    android:background="@drawable/shape_drawer_menu_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="页面"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#AEFFFFFF"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/button_main_star"
            style="@style/menu_item"
            android:text="明星图片"/>
        <TextView
            android:id="@+id/button_main_search"
            style="@style/menu_item"
            android:text="图片搜索"/>

        <TextView
            android:id="@+id/button_main_photoAlbum"
            style="@style/menu_item"
            android:text="本地图片"/>
        <TextView
            android:id="@+id/button_main_appList"
            style="@style/menu_item"
            android:text="本地APP"/>
        <TextView
            android:id="@+id/button_main_about"
            style="@style/menu_item"
            android:text="关于Spear"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="设置"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#AEFFFFFF"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/item_main_pauseLoadNewImage"
            android:clickable="true"
            style="@style/menu_item">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="列表滑动时停止加载图片"/>
            <CheckBox
                android:id="@+id/checkBox_main_pauseLoadNewImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_main_mobileNet"
            android:clickable="true"
            style="@style/menu_item">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="移动网络下不加载新图片"/>
            <CheckBox
                android:id="@+id/checkBox_main_mobileNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>