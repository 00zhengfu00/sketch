<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/home_category_margin_border"
        android:paddingRight="@dimen/home_category_margin_border"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/text_fourItem_categoryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:text="更多"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/card_fourItem_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginLeft="@dimen/home_category_margin_border"
            android:layout_marginTop="@dimen/home_category_margin_border"
            android:layout_marginRight="@dimen/home_category_margin"
            android:layout_marginBottom="@dimen/home_category_margin_border">
            <me.xiaopan.android.spear.widget.SpearImageView
                android:id="@+id/spearImage_fourItem_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/text_fourItem_name_one"
                style="@style/text_image_title"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/card_fourItem_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                android:layout_marginLeft="@dimen/home_category_margin"
                android:layout_marginTop="@dimen/home_category_margin_border"
                android:layout_marginRight="@dimen/home_category_margin"
                android:layout_marginBottom="@dimen/home_category_margin">
                <me.xiaopan.android.spear.widget.SpearImageView
                    android:id="@+id/spearImage_fourItem_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/text_fourItem_name_two"
                    style="@style/text_image_title"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_fourItem_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                android:layout_marginLeft="@dimen/home_category_margin"
                android:layout_marginTop="@dimen/home_category_margin"
                android:layout_marginRight="@dimen/home_category_margin"
                android:layout_marginBottom="@dimen/home_category_margin_border">
                <me.xiaopan.android.spear.widget.SpearImageView
                    android:id="@+id/spearImage_fourItem_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/text_fourItem_name_three"
                    style="@style/text_image_title"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_fourItem_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginLeft="@dimen/home_category_margin"
            android:layout_marginTop="@dimen/home_category_margin_border"
            android:layout_marginRight="@dimen/home_category_margin_border"
            android:layout_marginBottom="@dimen/home_category_margin_border">
            <me.xiaopan.android.spear.widget.SpearImageView
                android:id="@+id/spearImage_fourItem_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/text_fourItem_name_four"
                style="@style/text_image_title"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>