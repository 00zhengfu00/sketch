<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_item_one"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_marginLeft="@dimen/home_category_margin_border"
        android:layout_marginTop="@dimen/home_category_margin"
        android:layout_marginRight="@dimen/home_category_margin"
        android:layout_marginBottom="@dimen/home_category_margin">
        <me.xiaopan.android.spear.widget.SpearImageView
            android:id="@+id/image_item_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/text_item_name_one"
            style="@style/text_image_title"
            android:visibility="gone"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_item_two"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_marginLeft="@dimen/home_category_margin"
        android:layout_marginTop="@dimen/home_category_margin"
        android:layout_marginRight="@dimen/home_category_margin"
        android:layout_marginBottom="@dimen/home_category_margin">
        <me.xiaopan.android.spear.widget.SpearImageView
            android:id="@+id/image_item_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/text_item_name_two"
            style="@style/text_image_title"
            android:visibility="gone"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_item_three"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_marginLeft="@dimen/home_category_margin"
        android:layout_marginTop="@dimen/home_category_margin"
        android:layout_marginRight="@dimen/home_category_margin_border"
        android:layout_marginBottom="@dimen/home_category_margin">
        <me.xiaopan.android.spear.widget.SpearImageView
            android:id="@+id/image_item_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/text_item_name_three"
            style="@style/text_image_title"
            android:visibility="gone"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
