<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.xiaoapn.android.spear.sample">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="me.xiaopan.android.spear.sample.MyApplication" >
        <activity android:name="me.xiaopan.android.spear.sample.activity.ImageSearchActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="me.xiaopan.android.spear.sample.activity.DownloadActivity" android:label="@string/activity_titel_download"/>
        <activity android:name="me.xiaopan.android.spear.sample.activity.LoadActivity" android:label="@string/activity_titel_load"/>
        <activity android:name="me.xiaopan.android.spear.sample.activity.DisplayActivity" android:label="@string/activity_titel_display"/>
        <activity android:name="me.xiaopan.android.spear.sample.activity.NormalActivity" android:label="@string/app_name"/>
        <activity android:name="me.xiaopan.android.spear.sample.activity.ViewPagerActivity" android:label="@string/app_name"/>
    </application>
</manifest>
