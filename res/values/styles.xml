<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 列表项 -->
    <style name="listItem" parent="@style/base_match_wrap">
        <item name="android:paddingLeft">@dimen/base_padding_specialLarge</item>
        <item name="android:paddingTop">@dimen/base_padding_default</item>
        <item name="android:paddingRight">@dimen/base_padding_specialLarge</item>
        <item name="android:paddingBottom">@dimen/base_padding_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <!-- 文本 - 标题 -->
    <style name="text_title" parent="@style/base_wrap_wrap">
        <item name="android:textSize">@dimen/base_textSize_large</item>
        <item name="android:textColor">@color/selector_text_title</item>
    </style>
</resources>
